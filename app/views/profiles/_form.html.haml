= form_for(@profile) do |f|
  - if @profile.errors.any?
    #error_explanation
      %h2
        = pluralize(@profile.errors.count, "error")
        prohibited this profile from being saved:
      %ul
        - @profile.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label :first_name
    %br
      = f.text_field :first_name
  .field
    = f.label :middle_name
    %br
      = f.text_field :middle_name
  .field
    = f.label :last_name
    %br
      = f.text_field :last_name
  .field
    = f.label :sex
    %br
    = f.select :sex, ['Male', 'Female']
  .field
    = f.label :date_of_birth
    %br
      = f.date_select :date_of_birth
  .field
    = f.label :photo
    %br
      = f.text_field :photo
  .field
    = f.label :address
    %br
      = f.text_field :address
  .field
    = f.label :email
    %br
      = f.text_field :email
  .field
    = f.label :info
    %br
      = f.text_area :info
  .actions
    = f.submit